{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "globals": {
    "$t": "readonly"
  },
  "ignorePatterns": [
    "index.html"
  ],
  "extends": [
    "plugin:vue/vue3-essential",
    "eslint:recommended",
    "@vue/standard"
  ],
  "rules": {
    "vue/multi-word-component-names": "off"
  },
  "settings": {
    "vue-i18n": {
      "localeDir": "./src/locales/*.js"
    }
  }
}
